{
    "name": "websitesql/websitesql",
    "description": "A simple, easy-to-use, low-code content management system.",
    "homepage": "https://www.websitesql.com",
    "keywords": ["cms", "content management system", "low-code", "website builder"],
    "minimum-stability": "dev",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Alan Tiller",
            "email": "alan@alantiller.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "catfan/medoo": "^2.1",
        "filp/whoops": "^2.16",
        "laminas/laminas-diactoros": "^3.5",
        "league/container": "^4.2",
        "league/plates": "^3.5",
        "league/route": "^6.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "WebsiteSQL\\WebsiteSQL\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
